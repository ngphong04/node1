<%- include('header') %>
<%- include('navbar') %>
  <div class="content-wrapper">
    <section class="content-header">
      <h1>
        Quản lý Sản phẩm
      </h1>
    </section>
    <section class="content">
      <div class="box">
        <div class="box-body">
          
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Thư mục</th>
                <th>Price</th>
                <th>Sale Price</th>
                <th>Status</th>
                <th>Image</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
            <% proucts.map((item, index) => {%>
              <tr>
                <td style="padding-top: 20px;"><%= index + 1%></td>
                <td style="padding-top: 20px;"><%= item.name%></td>
                <td style="padding-top: 20px;"><%= item.cat_name%></td>
                <td style="padding-top: 20px;"><%= item.price%></td>
                <td style="padding-top: 20px;"><%= item.sale_price%></td>
                <td style="padding-top: 20px;"><%= item.status == 1 ? 'Hiển thị' : 'Tạm ẩn'%></td>
                <td class="">
                  <img src="uploads/<%= item.image%>"" alt="" width="60">
                </td>
                
                <td>
                  <a href="" class="btn btn-sm btn-primary"><i class="fa fa-edit"></i> Sửa</a>
                  <a href="" class="btn btn-sm btn-danger"><i class="fa fa-trush"></i> Xóa</a>
                </td>
              </tr>
            <% }) %>
            </tbody>
          </table>
          
        </div>
      </div>
    </section>
  </div>
<%- include('footer')%>